{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "BrewUp": {
        "Broker": "AzureServiceBus",
        "RabbitMQ": {
            "Host": "",
            "ExchangeCommandName": "brewup.commands.exchange",
            "ExchangeEventName": "brewup.events.exchange",
            "Username": "guest",
            "Password": "guest",
            "ClientId": "BrewUp"
        },
        "AzureServiceBus": {
            "ConnectionString": "",
            "TopicName": "",
            "ClientId": "sales"
        }
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.File" ],
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "Log\\BrewUpLogs.log",
                    "rollingInterval": "Day",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                },
                "restrictedToMinimumLevel": "Debug"
            }
        ]
    }
}
