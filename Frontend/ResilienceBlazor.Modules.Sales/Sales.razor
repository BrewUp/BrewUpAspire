@inherits SalesBase
@page "/sales"

<FluentToolbar id="toolbar-slotted-label">
	<FluentButton Appearance="Appearance.Accent" OnClick="@GetSalesOrdersAsync">Get Orders</FluentButton>
</FluentToolbar>
<br/>
<hr/>
<br />
<hr/>
<FluentDataGrid Items="@SalesOrders">
	<PropertyColumn Property="@(o => o.OrderNumber)" Sortable="true" />
	<PropertyColumn Property="@(o => o.CustomerName)" Sortable="true"/>
	<PropertyColumn Property="@(o => o.TotalAmount)"  Sortable="true"/>
</FluentDataGrid>